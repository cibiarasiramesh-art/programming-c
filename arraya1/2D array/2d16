#include<stdio.h>
#include<limits.h>
int main() {
    int r,c;
    scanf("%d %d",&r,&c);
    int arr[r][c];
    for (int i=0;i<r;i++) {
        for (int j=0;j<c;j++) {
            scanf("%d",&arr[i][j]);
        }
    }
    int row=0;
    int min=INT_MAX;
    for (int i=0;i<r;i++) {
        int sum=0;
        for (int j=0;j<c;j++) {
            sum=sum+arr[i][j];
        }
        if (sum>0 && sum<min) {
            min=sum;

            row=i;
            printf("%d\n",min);
        }
    }
    printf("%d",row);

}
