#include<stdio.h>
#include<limits.h>
int main() {
    int r,c;
    scanf("%d %d",&r,&c);
    int arr[r][c];
    int row=0;
    for (int i=0;i<r;i++) {
        for (int j=0;j<c;j++) {
            scanf("%d",&arr[i][j]);
        }
    }
    int max=INT_MIN;
    for (int i=0;i<r;i++) {
       int pro=1;

       for (int j=0;j<c;j++) {
           pro=pro*arr[i][j];
       }

       if (pro>max) {
           max=pro;
           row=i;
       }
   }
    printf("%d",row);
}

