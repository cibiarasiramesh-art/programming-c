#include<stdio.h>
#include<limits.h>
int main() {
    int r,c;
    scanf("%d %d",&r,&c);
    int arr[r][c];
    for (int i=0;i<r;i++) {
        for (int j=0;j<c;j++) {
            scanf("%d",&arr[i][j]);
        }
    }
    int max1=INT_MIN;
    int min1=INT_MAX;
    for (int i=0;i<r;i++) {
        int sum=0;
        for (int j=0;j<c;j++) {
            sum=sum+arr[i][j];
        }
        if (sum>max1) {
            max1=sum;
        }
        if (sum<min1){
            min1=sum;
        }
    }
    printf("%d max1:%d min:%d",max1-min1,max1,min1);

}
