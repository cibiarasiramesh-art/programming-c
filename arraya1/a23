#include<stdio.h>
#include<limits.h>
int main() {
    int n;
    scanf("%d",&n);
    int arr[n];
    for (int i=0;i<n;i++) {
        scanf("%d",&arr[i]);
    }
    int pmin=INT_MAX;
    int nmax=INT_MIN;
    for (int i=0;i<n;i++) {
        if (arr[i]<0) {
            if (arr[i]>nmax) {
                nmax=arr[i];
            }
        }
        else if (arr[i]>0){
            if (arr[i]<pmin) {
                pmin=arr[i];
            }
        }
    }
    int res=pmin;
    int val=-nmax;
    if (res==val) {
        printf("%d",pmin);
    }
    else if (res>val) {
        printf("%d",nmax);
    }
    else{
        printf("%d",pmin);
    }


}
