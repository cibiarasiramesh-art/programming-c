#include<Stdio.h>
int main() {
    int n;
    scanf("%d",&n);
    int a[n];
    for (int i=0;i<n;i++) {
        scanf("%d",&a[i]);
    }
    int min=a[0];
    int val=0;
    for (int i=0;i<n;i++) {
        if (a[i]<min) {
            min=a[i];
            if (min=a[n-1]) {
                val++;
            }
        }
    }

    int max=a[min];
    for (int i=min;i<n;i++) {
        if (a[i]>max) {
            max=a[i];
        }
    }
    if (val==1) {
        printf("-1");
    }
    else {
        int res=max-min;
        printf("%d",res);
    }

}
