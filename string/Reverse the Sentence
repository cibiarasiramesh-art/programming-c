#include<stdio.h>
#include<string.h>
int main() {
    char ch[200];
    fgets(ch,sizeof(ch),stdin);
    int len=strlen(ch);
    printf("%d\n",len);
    int count=0;
    int arr[count];
    int v=0;
    int sp=0;
    while (ch[v]!='\0') {
        if (ch[v]==' ') {
            sp++;

        }
        v++;

    }
    printf("%d\n",sp);
    int space=0;
    for (int i=len-1;i>=0;i--) {
        if (ch[i]==' ') {
            for (int j=i+1;j!='\0'||j!=' ';j++) {
                arr[count]=ch[j];
                printf("%c",arr[count]);
                count++;

            }
            space++;
        }
        if (sp==space) {
            for (int i=0;ch[i]!=' ';i++) {
                arr[count]=ch[i];
                printf("%c",arr[count]);
                printf("%c",arr[count]);
                count++;
            }
            break;
        }

    }
}
