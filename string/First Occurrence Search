#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main() {
    char ch[200];
    fgets(ch,sizeof(ch),stdin);
    char val;
    int rem=-1;
    scanf("%c",&val);
    int len=strlen(ch);
    int count=0;
    for (int i=0;i<len;i++) {
        if (ch[i]==val) {
            printf("%d",i);
            break;
        }


    }
    printf("%d",rem);

}

